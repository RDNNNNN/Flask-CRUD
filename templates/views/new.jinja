{% extends "layout/base.jinja" %}

{% block content %}
<h1>新增商品</h1>

<form method="POST" action="/">
    <section>
        <div>
            <label>名稱：</label>
            <input type="text" name="title" placeholder="商品名稱">
        </div>

        <div>
            <label>價格：</label>
            <input type="text" name="price" placeholder="商品價格">
        </div>

        <div>
            <label>描述：</label>
            <textarea name="desc"></textarea>
        </div>

        <div>
            <button>確定新增</button>
        </div>
    </section>

</form>
{% endblock content %}